<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Pages.ShowMiddleGame"
             xmlns:components="clr-namespace:Frontend.Resources.Components"
             xmlns:converters="clr-namespace:Frontend.Resources"
             Title="ShowMiddleGame"
             Style="{StaticResource PageBackground}">

    <Grid RowDefinitions="*, Auto">
        <ScrollView
            Grid.Row="1">
            <VerticalStackLayout>
                <Label
                    Text="Acciones actuales"
                    Style="{StaticResource TitleLabel}"/>

                <HorizontalStackLayout
                    Padding="10">
                    <Label
                        Text="Fecha: "
                        Style="{StaticResource TextLabel}"/>
                    <Label
                        x:Name="lblMatchWeek"
                        Style="{StaticResource TextLabel}"/>

                    <Label
                        Text="Cancha: "
                        Style="{StaticResource TextLabel}"/>
                    <Label
                        x:Name="lblPlace"
                        Style="{StaticResource TextLabel}"/>

                    <Label
                        Text="DÃ­a: "
                        Style="{StaticResource TextLabel}"/>
                    <Label
                        x:Name="lblDay"
                        Style="{StaticResource TextLabel}"/>

                </HorizontalStackLayout>

                <Label 
                    Text="Acciones equipo local"
                    Style="{StaticResource SubtitleLabel}"/>

                <StackLayout
                    x:Name="stkLocalTeam"
                    Style="{StaticResource TextLabel}">
                    <StackLayout.Triggers>
                        <DataTrigger TargetType="StackLayout" Binding="{Binding TeamLocal.IdPlayers.Count}" Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <!--"Pagina" del equipo local-->
                    <components:PageOfActions Team="{Binding TeamLocal}" />
                </StackLayout>

                <Label 
                    Text="Acciones equipo visitante"
                    Style="{StaticResource SubtitleLabel}"/>

                <StackLayout
                    x:Name="stkLocalTeam"
                    Style="{StaticResource TextLabel}"
                    BindableLayout.ItemsSource="{Binding TeamAway}">
                    <StackLayout.Triggers>
                        <DataTrigger TargetType="StackLayout" Binding="{Binding TeamAway.IdPlayers.Count}" Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <!--Agregar "pagina" del equipo visitante-->
                    <components:PageOfActions
                        Team="{Binding TeamAway}"/>
                </StackLayout>

                <Label 
                    Text="Acciones equipo local"
                    Style="{StaticResource SubtitleLabel}"/>

                <StackLayout
                    x:Name="stkLocalTeam"
                    Style="{StaticResource TextLabel}"
                    BindableLayout.ItemsSource="{Binding TeamLocal}">
                    <StackLayout.Triggers>
                        <DataTrigger TargetType="StackLayout" Binding="{Binding TeamLocal.IdPlayers.Count}" Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <!--Agregar "pagina" del jugador-->
                            <components:PageOfActions
                                IdPlayer="{Binding .}"/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>

                <Label 
                    Text="Acciones de los jugadores visitantes"
                    Style="{StaticResource SubtitleLabel}"/>

                <StackLayout
                    x:Name="stkLocalTeam"
                    Style="{StaticResource TextLabel}"
                    BindableLayout.ItemsSource="{Binding TeamAway}">
                    <StackLayout.Triggers>
                        <DataTrigger TargetType="StackLayout" Binding="{Binding TeamAway.IdPlayers.Count}" Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <!--Agregar "pagina" del jugador-->
                            <components:PageOfActions
                                IdPlayer="{Binding .}"/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            x:Name="btnGoBack"
            Text="Volver"
            Style="{StaticResource NavigationButton}"
            Clicked="OnGoBack"/>
    </Grid>


</ContentPage>