<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Frontend.Resources.Components"
             x:Class="Frontend.ViewMatchs"
             Title="ViewMatchs">
    <VerticalStackLayout>
        <components:MenuBar />

        <Button x:Name="btnCreateNew"
                Text="Create new +"
                Margin="10" />

        <ScrollView>
            <Grid x:Name="MatchesGrid" 
                  Margin="10"
                  ColumnSpacing="10" 
                  RowSpacing="10">
                <!-- Las celdas del grid se llenarán dinámicamente -->
            </Grid>
        </ScrollView>

        <Label Text="No hay partidos cargados."
               IsVisible="False">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding MatchesEmpty}" Value="true">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
            </Label.Triggers>
        </Label>
    </VerticalStackLayout>
</ContentPage>
