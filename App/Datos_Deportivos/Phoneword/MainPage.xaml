<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.MainPage">

    <VerticalStackLayout Spacing="15" Padding="20">
        
        <Label Text="STAT-BOARD"
               FontSize="20"/>

        <Label Text="Login"
               FontSize="10"/>

        <Label Text="Usuario no existe"
               FontSize="10"
               TextColor="Red"
               IsVisible="{Binding userNotExists}"/>

        <Entry x:Name="UsernameText"
               Text="Username"/>

        <Label Text="Contraseña incorrecta"
               FontSize="10"
               TextColor="Red"
               IsVisible="{Binding passwordWrong}"/>

        <Entry x:Name="PasswordText"
               Text="Password"/>

        <Button x:Name="ForgetPasswordButton"
                Text="¿Olvidaste tu contraseña?"
                Clicked="OnForget"/>

        <Button x:Name="CraeteAccountButton"
                Text="Crear cuenta"
                Clicked="OnCreateAccount"/>

        <Button x:Name="LoginButton"
                Text="Ingresar"
                IsEnabled="False"
                Clicked="OnLogin"/>

    </VerticalStackLayout>

</ContentPage>
