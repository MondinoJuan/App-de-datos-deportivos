<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.CreatePlayerModal"
             Title="CreatePlayerModal">
    <VerticalStackLayout>
        <Label 
            Text="Complete los datos del nuevo jugador"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            x:Name="lblPlayerName"/>
        <Entry
            x:Name="txtPlayerName"
            Text="{Binding Player.Name}"/>

        <Label
            x:Name="lblPlayerNumber"/>
        <Entry
            x:Name="txtPlayerNumber"
            Text="{Binding Player.Number}"/>

        <StackLayout Padding="20">
            <Label x:Name="lblStatus" Text="Local" FontSize="18" HorizontalOptions="Center" />
            <Switch
                x:Name="swtLocalAway"
                IsToggled="False" 
                Toggled="OnSwitchToggled" 
                OnColor="Blue" 
                ThumbColor="Orange" />
        </StackLayout>

        <Button 
            Text="Guardar"
            BackgroundColor="Green"
            Clicked="OnSave" />
        <Button 
            Text="Cancelar"
            BackgroundColor="Red"
            Clicked="OnCancel" />
    </VerticalStackLayout>
</ContentPage>