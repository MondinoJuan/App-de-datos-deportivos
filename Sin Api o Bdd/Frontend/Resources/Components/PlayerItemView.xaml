<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Resources.Components.PlayerItemView">

    <Frame Padding="15" Margin="10" HasShadow="True" CornerRadius="10" 
           BackgroundColor="White" BorderColor="#E0E0E0">

        <Grid ColumnSpacing="15" RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Número del jugador -->
            <Label Grid.Column="0" 
                   Text="{Binding Number}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Start" 
                   VerticalOptions="Center" />

            <!-- Nombre del jugador -->
            <Label Grid.Column="1" 
                   Text="{Binding Name}" 
                   FontSize="16" 
                   HorizontalOptions="Start" 
                   VerticalOptions="Center" 
                   LineBreakMode="TailTruncation" />

            <!-- Botón de editar -->
            <Button Grid.Column="2"
                    ImageSource="lapiz_edit.png"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Padding="5"
                    Clicked="OnEdit" />

            <!-- Botón de eliminar -->
            <Button Grid.Column="3"
                    ImageSource="trash_can.png"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Padding="5"
                    Clicked="OnDelete" />

            <!-- Reconocedor de gestos para toda la fila -->
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTapped" />
            </Grid.GestureRecognizers>
        </Grid>
    </Frame>
</ContentView>