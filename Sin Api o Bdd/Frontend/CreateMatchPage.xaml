<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.CreateMatchPage"
             Title="CreateMatchPage">
    <VerticalStackLayout>
        <Label 
            Text="Complete los datos del partido"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            x:Name="txtTournament"
            Placeholder="Torneo" />

        <Entry 
            x:Name="txtLocalTeam"
            Placeholder="Equipo local" />

        <Entry 
            x:Name="txtAwayTeam"
            Placeholder="Equipo visitante" />

        <!--<Label 
            Text="Fecha del partido"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <DatePicker Date="{Binding Match_Dto.Date}" />                 --><!--No se que tan correcto sea esto, reveer cuando cargue la entity.-->

        <Entry
            x:Name="txtMatchWeek"
            Placeholder="Jornada" />

        <Entry
            x:Name="txtPlace"
            Placeholder="Lugar" />

        <Button
            x:Name="btnCreateMatch"
            Text="Crear partido"
            Clicked="OnCreateMatch" />
    </VerticalStackLayout>
</ContentPage>